@inject NavigationManager NavigationManager
@inherits NavMenuBase

<div class="sidebar flex-column">
    <div class="nav-folder scrollbar">
        <ul class="nav">
            <li class="nav-item">
                <NavLink class="nav-link" href='folder/add'>
                    <span class="oi oi-plus" aria-hidden="true"></span> Add folder
                </NavLink>
            </li>
            @foreach (var folder in Folders)
            {
                <li class="nav-item" title="@(folder.HasConflicts ? "Folder has conflicts" : folder.Name)">
                    <NavLink class="nav-link" href='@("folder/"+ folder.Id)'>
                        @if (folder.HasConflicts)
                        {
                            <span class="oi oi-warning"></span> @folder.Name
                        }
                        else
                        {
                            <span class="oi oi-folder" aria-hidden="true"></span> @folder.Name
                        }
                    </NavLink>
                </li>
            }
        </ul>
    </div>
    <div class="nav-item sidebar-bottom">
        <NavLink class="nav-link" href="settings">
            <span class="oi oi-cog" aria-hidden="true"></span> Settings
        </NavLink>
    </div>
</div>
